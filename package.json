{
  "name": "smart-contract-boilerplate",
  "version": "1.0.0",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "clean": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat clean",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "hardhat:node": "hardhat node",
    "lint:sol": "solhint  contracts/**/*.sol --fix",
    "lint:ts": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore --ext .js,.ts . --fix",
    "prettier": "prettier --config ./.prettierrc.json --ignore-path ./.prettierignore --write \"**/*.{js,json,md,sol,ts}\"",
    "remappings": "forge remappings > remappings.txt",
    "reuse": "python -m reuse",
    "test:hardhat": "hardhat test",
    "test:forge": "forge test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xkrauser/smart-contract-boilerplate.git"
  },
  "author": {
    "name": "Johannes Krauser III",
    "email": "krauser@hey.com",
    "url": "https://github.com/0xKrauser"
  },
  "license": "Apache-2.0",
